<section class="custom_banner">
    <div class="custom_banner_wr">
        {%- capture breadcrumb -%}
        <nav aria-label="{{ 'general.breadcrumb.title' | t }}" class="breadcrumb breadcrumb--floating text--xsmall hidden-phone">
        <ol class="breadcrumb__list" role="list">
            <li class="breadcrumb__item">
                <a class="breadcrumb__link" href="{{ routes.root_url }}">{{ 'general.breadcrumb.home' | t }}</a>
            </li>

            <li class="breadcrumb__item">
                <span class="breadcrumb__link" aria-current="page">
                    {{page.url | split: '/' | last | replace: '-', ' ' }}
                </span>
            </li>
        </ol>
        </nav>
    {%- endcapture -%}
    {{-breadcrumb-}}
        <h1 class="custom_banner_title">
            {{section.settings.title}}
        </h1>
    </div>
</section>

<style>
.custom_banner_title {
    color: {{section.settings.title-color}};
}

.custom_banner .breadcrumb__list .breadcrumb__link,
.breadcrumb__item+.breadcrumb__item:before {
    color: {{section.settings.title-color}};
}
.custom_banner {
    display: flex;
    width: 100%;
    padding: 0 50px;

    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-image: url({{section.settings.img | img_url: 'master'}});
}
</style>

{% schema %}
{
    "name": "Custom banner",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "About us"
        },
        {
            "type": "color",
            "id": "title-color",
            "label": "Title color",
            "default": "#FFFFFF"
        },
        {
            "type": "image_picker",
            "id": "img",
            "label": "Banner image"
        }
    ],
   "presets": [
        {
            "category": "Select",
            "name": "Custom banner"
        }
   ]
}
{% endschema %}