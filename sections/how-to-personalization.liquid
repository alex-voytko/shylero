{%- assign column = section.blocks.size -%}

<div class="howToPersona">
    {% render "decor-line"
        text: {{section.settings.title}},
        color: {{section.settings.line_bg}}
    %}
    <div class="howToPersona__container page-width container">
        {% for block in section.blocks %}
            <div class="howToPersona__item">
                <div class="howToPersona__item-imgText">
                    <div class="howToPersona__item-step">{{forloop.index}}</div>
                    <img src="{{block.settings.step_image | img_url: 'master'}}" alt="{{block.settings.step_image.alt}}" loading="lazy">
                    {% if block.settings.text_on != blank  %}
                    <div class="howToPersona__imgText-text">{{block.settings.text_on}}</div>   
                    {% endif %}
                </div>
                <div class="howToPersona__item-text">
                    <div class="howToPersona__item-text-info">{{block.settings.text_below}}</div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>

:root {
     --count-column-sec: {{column}};
} 
.howToPersona {
}
.howToPersona__container {
    display: -ms-grid;
    display: grid;
    -ms-grid-columns: ;
    grid-template-columns: repeat(var(--count-column-sec), minmax(200px, 320px));
    grid-column-gap: 32px;
    -webkit-box-pack: center;
        -ms-flex-pack: center;
            justify-content: center;
    margin-bottom: 86px;
}
.howToPersona__item {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
        -ms-flex-direction: column;
            flex-direction: column;
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-pack: stretch;
        -ms-flex-pack: stretch;
            justify-content: stretch;
    height: 100%;
}
.howToPersona__item-imgText {
    height: 320px;
    max-width: 320px;
    width: 100%;
    position: relative;
    margin-bottom: 20px;
}
.howToPersona__item-imgText img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    -o-object-fit: contain;
       object-fit: contain;
    z-index: 2;
}
.howToPersona__imgText-text {
    width: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    z-index: 3;
