{
    "name": "How to personalize",
    "blocks": [
        {
            "type": "step",
            "name": "Step",
            "settings": [
                {
                        "type": "image_picker",
                        "id": "step_image",
                        "label": "Step image"
                },
                {
                    "type": "richtext",
                    "id": "text_on",
                    "label": "Text on image"
                },
                {
                    "type": "richtext",
                    "id": "text_below",
                    "label": "Text below image"
                }
            ]
        }
    ],
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "color",
            "id": "line_bg",
            "label": "Background line",
            "default": "#6FA287"
        }
    ],
    "presets": [
        {
            "name": "How to personalize"
        }
    ]
}
